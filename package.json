{
  "name": "bam-otf",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test:unit test:integration test:e2e",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:e2e:install": "pnpx playwright install chromium --with-deps",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{js,jsx,json,yml,yaml,css,ts,tsx,md,mdx}\"",
    "prisma": "cd apps/bam-otf-server && pnpm prisma",
    "prepare": "node ./scripts/prepare.js",
    "changeset": "changeset",
    "validate": "turbo test:unit lint typecheck build",
    "setup": "docker-compose up -d && pnpm install && pnpm prisma migrate reset --force && pnpm validate && pnpm test:e2e:install && turbo test:integration test:e2e"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "dotenv": "^16.1.0",
    "eslint": "8.35.0",
    "eslint-config-custom": "workspace:*",
    "husky": "8.0.3",
    "nano-staged": "0.8.0",
    "prettier": "2.8.7",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "1.10.3",
    "vitest": "0.31.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1",
  "nano-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix",
    "*.{js,jsx,json,yml,yaml,css,ts,tsx,md,mdx}": "prettier --write"
  }
}
