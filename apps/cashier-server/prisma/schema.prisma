generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION_STRING")
}

enum PaymentIntentStatus {
  pending
  processing
  succeeded
  canceled
}

model PaymentIntent {
  id                 String              @id @default(uuid())
  // Addresses are unique, so we can identify the payment intent by the address
  address            String              @unique
  /// In sats
  amount             BigInt
  canceledAt         DateTime?
  cancellationReason String?
  description        String?
  // metadata Json?
  // customer  String?
  // receiptEmail String?
  // Number of blocks confirmed required for the transaction to be considered confirmed.
  confirmations      Int                 @default(6)
  status             PaymentIntentStatus @default(pending)
  transactions       Transaction[]
  // account            Account?      @relation(fields: [accountId], references: [id])
  // accountId          String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Transaction {
  id              String        @id
  amount          BigInt /// In sats
  confirmations   Int
  paymentIntent   PaymentIntent @relation(fields: [paymentIntentId], references: [id])
  paymentIntentId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

