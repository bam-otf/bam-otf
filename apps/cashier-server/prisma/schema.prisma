generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION_STRING")
}

enum PaymentIntentStatus {
  pending
  processing
  succeeded
  canceled
}

model PaymentIntent {
  id                 String              @id @default(uuid())
  address            String              @unique // Addresses are unique, so we can identify the payment intent by the address
  amount             BigInt
  status             PaymentIntentStatus @default(pending)
  confirmations      Int                 @default(1) // Number of blocks confirmed required for the transaction to be considered confirmed.
  currency           String              @default("BTC") @db.VarChar(3) // 3 letter currency code
  canceledAt         DateTime?
  cancellationReason String?
  description        String?
  metadata           Json?
  transactions       Transaction[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model Transaction {
  id              String        @id
  amount          BigInt /// Transaction amount in satoshis
  originalAmount  BigInt? /// Converted to the currency of the payment intent at the time of the transaction @map("amountReceived")
  confirmations   Int
  paymentIntent   PaymentIntent @relation(fields: [paymentIntentId], references: [id])
  paymentIntentId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}
