{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VERCEL_URL", "VERCEL_ENV", "WEBHOOK_SECRET"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "build": {
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:unit": {
      "dotEnv": [".env.test.local", ".env.test", ".env"],
      "outputs": []
    },
    "test:integration": {
      "dotEnv": [".env.test.local", ".env.test", ".env"],
      "outputs": []
    },
    "test:e2e": {
      "dotEnv": [".env.test.local", ".env.test", ".env"],
      "env": ["CI"],
      "outputs": []
    }
  }
}
